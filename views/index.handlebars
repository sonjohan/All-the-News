{{> navs/index}}

<div class="jumbotron jumbotron-fluid bg-dark">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-light">
                <h1>{{this.title}}</h1>
                <h3>{{this.subtitle}}</h3>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div id="articles">
        {{#each articles}}
            <div class="card d-inline-block mr-3 mb-3" style="width: 18rem;">
                <div class="card-body">
                    <h4><a href="{{this.link}}">{{this.title}}</a></h4>
                    <div class="d-inline">
                        <form class="form d-inline" action="/api/articles/save/{{this.id}}" method="POST">
                            <button type="submit" class="btn btn-success">Save Article</button>
                        </form>
                        <form class="form d-inline" action="/api/articles/dismiss/{{this.id}}?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Dismiss Article</button>
                        </form>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>