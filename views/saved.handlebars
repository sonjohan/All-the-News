{{> navs/saved}}

<div class="container">
    <div id="articles">
        {{#if articles}}
        {{#each articles}}
        <div class="card d-inline-block mr-3 my-3" style="width: 18rem;">
            <div class="card-body">
                <h4><a href="{{this.link}}">{{this.title}}</a></h4>
            </div>
            <div class="d-inline">

                <form class="form-inline d-linline" action="/api/articles/{{this.id}}?_method=DELETE" method="POST">
                    <a class="btn btn-success mr-2" href="#" data-toggle="modal" data-target="#{{this.id}}">Article
                        notes</a>
                    <button type="submit" class="btn btn-danger">Delete from saved</button>
                </form>
            </div>
        </div>

        {{> content/modal}}

        {{/each}}
        {{else}}
        <div class="mt-4">
            <h4>There are no saved articles.</h4>
        </div>
        {{/if}}
    </div>
</div>